<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2"
        android:paddingBottom="@dimen/dp_10"
        >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_200"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <LinearLayout
            android:id="@+id/linear_dot"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/viewpager"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/text_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/StyleTextHome"
            android:text="@string/app_name"
            app:layout_constraintTop_toBottomOf="@id/viewpager"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_one"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@android:color/white"
            android:nestedScrollingEnabled="false"
            />

        <TextView
            android:id="@+id/text_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/StyleTextHome"
            android:text="@string/app_name"
            app:layout_constraintTop_toBottomOf="@id/recycler_one"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_two"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@android:color/white"
            />


        <TextView
            android:id="@+id/text_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/StyleTextHome"
            android:text="@string/app_name"
            app:layout_constraintTop_toBottomOf="@id/recycler_two"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_three"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@android:color/white"
            />


        <TextView
            android:id="@+id/text_four"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/StyleTextHome"
            android:text="@string/app_name"
            app:layout_constraintTop_toBottomOf="@id/recycler_three"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_four"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_four"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@android:color/white"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
