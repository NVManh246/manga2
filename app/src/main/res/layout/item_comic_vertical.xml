<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraint_comic"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/dp_10"
    android:background="@drawable/effect_click_kind"
    >

    <ImageView
        android:id="@+id/image_comic"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:src="@color/colorPrimary"
        android:scaleType="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:transitionName="image_comic"
        />

    <TextView
        android:id="@+id/text_name_comic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="abc abc abc abc abc "
        android:textSize="13sp"
        android:textColor="@color/color_dark_gray"
        app:layout_constraintTop_toBottomOf="@+id/image_comic"
        app:layout_constraintLeft_toLeftOf="@id/image_comic"
        app:layout_constraintRight_toLeftOf="@+id/image_popup_menu"
        android:maxLines="2"
        android:ellipsize="end"
        />

    <ImageView
        android:id="@+id/image_popup_menu"
        android:layout_width="15dp"
        android:layout_height="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:src="@drawable/ic_more_vert_black_24dp"
        app:layout_constraintTop_toBottomOf="@+id/image_comic"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="centerCrop"
        />

</android.support.constraint.ConstraintLayout>

